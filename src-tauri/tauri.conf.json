{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "nekoframe",
  "version": "0.1.0",
  "identifier": "com.nekoframe.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "NekoFrame",
        "width": 320,
        "height": 320,
        "resizable": false,
        "visible": false,
        "label": "main",
        "url": "index.html",
        "maximizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "nubsuki",
    "category": "Utility",
    "shortDescription": "System monitoring application",
    "longDescription": "NekoFrame is a system monitoring application that fetches system information and shares it via a local WebSocket. It is designed to be lightweight and easy to use.",
    "copyright": "Copyright Â© 2025 nubsuki",
    "license": "MIT",
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico"
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
